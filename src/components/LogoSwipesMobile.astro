---
// Damen Brands
import angels from "../assets/angels.png";
import opus from "../assets/opus.png";
import someday from "../assets/someday.png";
import richroyal from "../assets/richandroyal.png";
import monari from "../assets/monari.png";
import marcopolo from "../assets/marcopolo.png";
import moremore from "../assets/moreandmore.png";
import bettybarclay from "../assets/bettybarclay.png";
import amberjune from "../assets/amberandjune.png";
import gilbret from "../assets/gilbret.png";
import fuchsschmitt from "../assets/fuchsschmitt.png";
import cartoon from "../assets/cartoon.png";
import apricot from "../assets/apricot.png";
import jdy from "../assets/jacquelinedeyong.png";
import comma from "../assets/comma.png";
import smithsoul from "../assets/smithsoul.png";
import cambio from "../assets/cambio.png";
import mac from "../assets/mac.png";
import raphaela from "../assets/raphaela.png";
import codello from "../assets/codello.png";
import rabe from "../assets/rabe.png";

// Herren Brands 
import pmelegend from "../assets/pmelegend.png";
import noexcess from "../assets/noexcess.png";
import camelactive from "../assets/camelactive.png";
import carlgross from "../assets/carlgross.png";
import clubofgents from "../assets/clubofgents.png";
import olymp from "../assets/olymp.png";
import brax from "../assets/brax.png";
import fynchhatton from "../assets/fynchhatton.png";
import chasin from "../assets/chasin.png";
import jackjones from "../assets/jackandjones.png";


---



<section class="logo-slider-container mb-[130px] mt-[50px] py-[4%] px-[30px] lg:px-0">
    <div class="flex flex-col justify-center items-center gap-5">
        <h2><span class="hidden lg:flex">DREI ETAGEN, UNENDLICHE</span> <br />MARKENVIELFALT</h2>
        <p class="text-black"><b>Das beste aus der Modewelt auf 3 Etagen</b></p>
        <p class="lg:max-w-[600px] font-light text-black">Wir beschränken uns nicht auf die bekannte Namen, sondern setzen auch auf spezielle Geheimtipps.</p>
    </div>
    <div class="button-group mt-[70px]">
        <button id="btn-damen" class="active">Damen</button>
        <button id="btn-herren">Herren</button>
    </div>

    
    <div class="swiper-container" id="swiper-damen">
        <div class="swiper">
            <div class="swiper-wrapper">
    
                <div class="swiper-slide mt-[20px]">
                    <div class="flex flex-col gap-4 justify-center items-center">
                        <img src={opus.src} width="175" loading="lazy" alt="opus-logo" />
                        <img src={someday.src} width="175" loading="lazy" alt="someday-logo" />
                    </div>
                </div>
    
                <div class="swiper-slide mt-[20px]">
                    <div class="flex flex-col gap-4 justify-center items-center">
                        <img src={richroyal.src} width="175" loading="lazy" alt="richandroyal-logo" />
                        <img src={monari.src} width="175" loading="lazy" alt="monari-logo" />
                    </div>
                </div>
    
                <div class="swiper-slide mt-[20px]">
                    <div class="flex flex-col gap-4 justify-center items-center">
                        <img src={marcopolo.src} width="175" loading="lazy" alt="marcopolo-logo" />
                        <img src={angels.src} width="175" loading="lazy" alt="angels-logo" />
                    </div>
                </div>
    
                <div class="swiper-slide mt-[20px]">
                    <div class="flex flex-col gap-4 justify-center items-center">
                        <img src={moremore.src} width="175" loading="lazy" alt="moreandmore-logo" />
                        <img src={bettybarclay.src} width="175" loading="lazy" alt="bettybarclay-logo" />
                    </div>
                </div>
    
                <div class="swiper-slide mt-[20px]">
                    <div class="flex flex-col gap-4 justify-center items-center">
                        <img src={amberjune.src} width="175" loading="lazy" alt="amberandjune-logo" />
                        <img src={gilbret.src} width="175" loading="lazy" alt="gilbret-logo" />
                    </div>
                </div>
    
                <div class="swiper-slide mt-[20px]">
                    <div class="flex flex-col gap-4 justify-center items-center">
                        <img src={fuchsschmitt.src} width="175" loading="lazy" alt="fuchsschmitt-logo" />
                        <img src={rabe.src} width="175" loading="lazy" alt="rabe-logo" />
                    </div>
                </div>
    
                <div class="swiper-slide mt-[20px]">
                    <div class="flex flex-col gap-4 justify-center items-center">
                        <img src={cartoon.src} width="175" loading="lazy" alt="cartoon-logo" />
                        <img src={apricot.src} width="175" loading="lazy" alt="apricot-logo" />
                    </div>
                </div>
    
                <div class="swiper-slide mt-[20px]">
                    <div class="flex flex-col gap-4 justify-center items-center">
                        <img src={jdy.src} width="175" loading="lazy" alt="jacquelinedeyong-logo" />
                        <img src={comma.src} width="175" loading="lazy" alt="comma-logo" />
                    </div>
                </div>
    
                <div class="swiper-slide mt-[20px]">
                    <div class="flex flex-col gap-4 justify-center items-center">
                        <img src={smithsoul.src} width="175" loading="lazy" alt="smithsoul-logo" />
                        <img src={cambio.src} width="175" loading="lazy" alt="cambio-logo" />
                    </div>
                </div>
    
                <div class="swiper-slide mt-[20px]">
                    <div class="flex flex-col gap-4 justify-center items-center">
                        <img src={mac.src} width="175" loading="lazy" alt="mac-logo" />
                        <img src={raphaela.src} width="175" loading="lazy" alt="raphaela-logo" />
                    </div>
                </div>
    
                <div class="swiper-slide mt-[20px]">
                    <div class="flex flex-col gap-4 justify-center items-center">
                        <img src={codello.src} width="175" loading="lazy" alt="codello-logo" />
                    </div>
                </div>
    
            </div>
        </div>
    </div>
    
            
    <div class="swiper-container versteckt" id="swiper-herren">
        <div class="swiper">
            <div class="swiper-wrapper">
    
                <div class="swiper-slide mt-[50px]">
                    <div class="flex flex-col gap-4 justify-center items-center">
                        <img src={pmelegend.src} width="175" loading="lazy" alt="pmelegend-logo" />
                        <img src={noexcess.src} width="175" loading="lazy" alt="noexcess-logo" />
                    </div>
                </div>
    
                <div class="swiper-slide mt-[50px]">
                    <div class="flex flex-col gap-4 justify-center items-center">
                        <img src={camelactive.src} width="175" loading="lazy" alt="camelactive-logo" />
                        <img src={carlgross.src} width="175" loading="lazy" alt="carlgross-logo" />
                    </div>
                </div>
    
                <div class="swiper-slide mt-[50px]">
                    <div class="flex flex-col gap-4 justify-center items-center">
                        <img src={clubofgents.src} width="175" loading="lazy" alt="clubofgents-logo" />
                        <img src={olymp.src} width="175" loading="lazy" alt="olymp-logo" />
                    </div>
                </div>
    
                <div class="swiper-slide mt-[50px]">
                    <div class="flex flex-col gap-4 justify-center items-center">
                        <img src={brax.src} width="175" loading="lazy" alt="brax-logo" />
                        <img src={fynchhatton.src} width="175" loading="lazy" alt="fynchhatton-logo" />
                    </div>
                </div>
    
                <div class="swiper-slide mt-[50px]">
                    <div class="flex flex-col gap-4 justify-center items-center">
                        <img src={chasin.src} width="175" loading="lazy" alt="chasin-logo" />
                        <img src={jackjones.src} width="175" loading="lazy" alt="jackjones-logo" />
                    </div>
                </div>
    
                
    
            </div>
        </div>
    </div>
    
  
    <div class="swiper-navigation-container">
        <button class="custom-prev">←</button>
        <button class="custom-next">→</button>
    </div>
</section> 


<style>

.logo-slider-container {
    display: none;
}

h2 {
    font-size: 50px;
    font-weight: 300;
    line-height: 1.1;
    letter-spacing: 1px;
}

p {
    font-size: 18px;
    
}

img {
    padding: 20px 0;
    max-width: 240px;
    max-height: 76px;
}



.logo-slider-container {
    text-align: center;
    position: relative;
}

.button-group {
    display: flex;
    justify-content: center;
    gap: 50px;
    
}

.button-group button {
    padding: 7px 5px;
    border: none;
    cursor: pointer;
    font-size: 16px;
    transition: background 0.3s ease-in-out;
}

.button-group button.active {
    border-bottom: 2px solid black;
   
}


.swiper-container {
    position: relative;
    width: 100%;
    max-width: 1100px;
    margin: auto;
}

.versteckt {
    display: none;
}


.swiper-navigation-container {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 20px;
}

.custom-prev,
.custom-next {
    color: black;
    border: none;
    padding: 5px 10px;
    cursor: pointer;
    font-size: 30px;
    border-radius: 5px;
    transition: background 0.3s ease-in-out;
}

.mobile-only {
    display: hidden !important;
}

@media screen and (max-width: 769px) {
    h2 {
        font-size: 30px;
    }

    .logo-slider-container {
        display: block;
    }

   
}
</style>

<script src="../libs/logo_swiper_mobile.js"></script>