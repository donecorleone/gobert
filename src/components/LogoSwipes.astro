<style>

h2 {
    font-size: 50px;
    font-weight: 300;
    line-height: 1.1;
    letter-spacing: 1px;
}


img {
    padding: 20px 0;
    max-width: 240px;
    max-height: 76px;
}

.logo-slider-container {
    text-align: center;
    position: relative;
}

.button-group {
    display: flex;
    justify-content: center;
    gap: 50px;
}

.button-group button {
    padding: 7px 5px;
    border: none;
    cursor: pointer;
    font-size: 16px;
    transition: background 0.3s ease-in-out;
}

.button-group button.active {
    border-bottom: 2px solid black;
   
}


.swiper-container {
    position: relative;
    width: 100%;
    max-width: 1100px;
    margin: auto;
}

.versteckt {
    display: none;
}


.swiper-navigation-container {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 20px;
}

.custom-prev,
.custom-next {
    color: black;
    border: none;
    padding: 5px 10px;
    cursor: pointer;
    font-size: 30px;
    border-radius: 5px;
    transition: background 0.3s ease-in-out;
}



@media screen and (max-width: 769px) {
    h2 {
        font-size: 30px;
    }

    .logo-slider-container {
        display: none;
    }

    
}
</style>

<script src="../libs/logo_swiper.js"></script>