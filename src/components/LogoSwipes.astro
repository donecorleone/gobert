                                    <img src={apricot.src} width="175" loading="lazy" />
                                    <img src={jdy.src} width="175" loading="lazy" />
                                    <img src={comma.src} width="175" loading="lazy" />
                                    <img src={smithsoul.src} width="175" loading="lazy" />
                                    <img src={cambio.src} width="175" loading="lazy" />
                                </div>
                            </div>
                
                            <!-- Slide 4 -->
                            <div class="swiper-slide mt-[50px]">
                                <div class="grid grid-cols-3 grid-rows-2 gap-4 place-items-center">
                                    <img src={mac.src} width="175" loading="lazy" />
                                    <img src={angels.src} width="175" loading="lazy" />
                                    <img src={raphaela.src} width="175" loading="lazy" />
                                    <img src={codello.src} width="175" loading="lazy" />
                    
                                    
