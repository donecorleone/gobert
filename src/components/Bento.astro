---
import bentoImage1 from "../assets/bento-grid-1.jpg";
import bentoImage2 from "../assets/bento-grid-2.jpg";
import bentoImage3 from "../assets/bento-grid-3.jpg";
import quote from "../assets/quote.svg";
import banner from "../assets/gobert-modehaus-1.svg";
import banner2 from "../assets/gobert-modehaus-2.svg";


import { getImage } from "astro:assets";
import { urlFor } from "../utils/image";
import { Image } from "astro:assets";

const optBentoImage = await getImage({src: bentoImage1, format: 'avif'})
const optBentoImage2 = await getImage({src: bentoImage2, format: 'avif'})
const optBentoImage3 = await getImage({src: bentoImage3, format: 'avif'})

---
<div class="wrapper lg:mx-[4%]">
<div class="container mx-auto max-w-[1400px] gap-5 px-[30px] md:px-[4%] lg:px-0">
    <!-- Erste Zeile mit Rot & Grün -->
    <div class="flex flex-col lg:flex-row gap-5 w-full">
        <!-- Rote Boxen (ca. 55% Breite) -->
        <div class="flex-auto lg:flex-[53%] flex flex-col justify-center items-center gap-5">
            <div class="w-full h-[297px] md:h-[500px] lg:h-[640px] bg-[#DFDBCB] grid place-items-center">
                    
                <div class="wrapper px-[30px] lg:px-[10%]">
                    <Image src={quote} alt="orange quote" class="quote mb-[40px] justify-self-start"/>
                    <p class="quote-text">Stil ist etwas sehr individuelles.<br />
                    Es ermöglicht dir,<br />
                    <span class="font-bold italic">du selbst</span> zu sein.    
                    </p>
                </div>
        
            </div>
            <div class="img-box w-full h-[350px] md:h-[600px] lg:h-[640px] bg-cover bg-no-repeat" style={`background-image: url(${optBentoImage2.src});`}></div>
        </div>
        <!-- Grüne Boxen (ca. 45% Breite) -->
        <div class="flex-auto lg:flex-[47%] flex flex-col-reverse lg:flex-col justify-center items-center gap-5">
            <div class="img-box w-full h-[450px] md:h-[945px] lg:h-[845px] bg-no-repeat bg-cover" style={`background-image: url(${optBentoImage.src});`}>
                
            </div>
            <div class="herren relative w-full h-[400px] md:h-[435px] bg-[#494947] text-white pt-4">
                <Image src={banner} alt="gobert banner" class="gobert-banner absolute top-[-100px] lg:top-[-120px] left-1/2 -translate-x-1/2 lg:left-auto lg:right-[30px] lg:translate-x-0" />
                <div class="flex flex-col absolute left-0 bottom-0 p-[30px] lg:p-[50px]">
                    <h2 class="text-[22px] lg:text-[49px] md:text-[36px] pb-[20px] uppercase">Herren</h2>
                    <p class="pb-[20px]">
                            <span class="text-[18px]">Das beste aus der Modewelt auf 3 Etagen<br /><br /></span>
                            <span class="font-extralight text-[18px]">Große Brands und kleine Geheimtipps, coole Trendteile und starke Basics.</span> 
                    </p>
                    <button class="text-left text-[17px] font-medium flex items-center">
                        <a href="/galerie-herren">
                            HERRENKOLLEKTION
                        </a>
                        <img src="/images/arrow-rechts-weiss.svg" alt="arrow rechts" width="18" height="12" class="text-white w-[18px] h-[12px] ml-[30px]" />
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Zweite Zeile mit Blauen Elementen -->
    <div class="flex w-full flex-col lg:flex-row gap-5 pt-5">
        <div class="relative flex-auto lg:flex-[43%] h-[420px] md:h-[435px] lg:h-[645px] bg-[#e74011]">
            <div class="absolute flex flex-col left-0 bottom-0 p-[30px] lg:p-[50px] text-white">
                <h2 class="text-[22px] md:text-[36px] lg:text-[49px] pb-[20px] uppercase font-light pt-4">Damen</h2>
                    <p class="pb-[20px] text-white">
                            <span class="text-[18px]">Das beste aus der Modewelt auf 3 Etagen<br/><br /></span>
                            <span class="font-extralight text-[18px]">Tauchen Sie ein in die von uns sorgfältig und liebevoll zusammengestellte Erlebniswelt der Mode.</span> 
                    </p>
                    <button class="text-left text-[17px] font-medium flex items-center">
                        <a href="/galerie-damen">
                            Damenkollektion
                        </a>
                        <img src="/images/arrow-rechts-weiss.svg" alt="arrow rechts" width="18" height="12" class="text-white w-[18px] h-[12px] ml-[30px]" />
                    </button>
            </div>
        </div>
        <div class="img-box flex-auto lg:flex-[57%] h-[330px] md:h-[645px] bg-cover bg-no-repeat" style={`background-image: url(${optBentoImage3.src});`}></div>
    </div>
</div>
</div>


<style>
.quote-text {
    text-transform: uppercase;
    color: #E74011;
    font-size: 45px;
    font-weight: 300;
    line-height: 1.2;
    
}

h2 {
    font-weight: 300;
}

.herren p{
color: white;
}

p {
    font-size: 18px;
}

button img {
    object-fit: contain;
}

.img-box {
    background-position-x: 25%;
}

@media screen and (max-width: 769px) {
    .img-box {
        background-position: left;
        background-repeat: no-repeat;
        background-size: cover;
    }

    .quote-text {
        font-size: 22px;
    }

    .quote {
        max-width: 50px;
    }

    p {
        font-size: 16px;
    }

    .gobert-banner {
        max-width: 78px;
    }
}
</style>