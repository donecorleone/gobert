---

import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';


interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="description"
      content="Das ist ein Testtemplate der Agentur 4Dimensional. Woop Woop super fast."
    />

    <title>{title}</title>

  </head>
  <body>

      <header>  
        <Header />
      </header>
      <main>
        <slot />
      </main>
      <Footer />

  </body>
</html>

<style>


</style>


<style is:global>

  

::-webkit-scrollbar {
    display: none;
    }

    /* Hide scrollbar for IE, Edge and Firefox */
    html {
    scrollbar-width: none; /* IE and Edge */
    -ms-overflow-style: none;  /* IE 10+ */
    overflow-x: hidden;
    }

    body {
    overflow: -moz-scrollbars-none; /* Firefox */
    -ms-overflow-style: none; /* IE 10+ */
    overflow-x: hidden;
    }

    /* Initial Set-up */
    *,
    *:before,
    *:after {
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        
    }

    input,
    textarea {
        width: 100%;
        height: 8rem;
        padding: 1rem;
        background: rgba(249, 250, 250, 0.5);
        border: 1px solid #21212144;
        border-radius: 1rem;
        outline-color: var(--color-blue);
    }
    textarea {
        min-height: 16rem;
        height: auto;
        resize: vertical;
    }

    input::placeholder {
        vertical-align: middle;
    }


    ::-webkit-scrollbar {
        display: none;
    }

    h1 {
      font-family: "FilsonPro", sans-serif;
      font-size: 72px;
    }

    h2 {
      font-family: "FilsonPro", sans-serif;
      font-size: 60px;    
    }

    h3 {
      font-family: "FilsonPro", sans-serif;
      font-size: 50px;
    }

    h4 {
      font-family: "FilsonPro", sans-serif;
      font-size: 40px;
    }

    h5 {
      font-family: "FilsonPro", sans-serif;
      font-size: 32px;
    }

    h6 {
      font-family: "FilsonPro", sans-serif;
      font-size: 22px;
    }

    p {
        font-family: "FilsonPro", sans-serif;
        font-size: 18px;
        font-weight: 300;
        color: rgb(117, 117, 117);
    }

    a {
      font-family: "FilsonPro", sans-serif;
    }

    button {
      font-family: "FilsonPro", sans-serif;
      text-transform: uppercase;
    }

   

   

 
</style>